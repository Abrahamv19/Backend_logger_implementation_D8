<h1 class='title__cartpage'>CHECKOUT</h1>
{{#if cart.length}}
  <table class='table__cart'>
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Precio</th>
        <th>Cantidad</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
          <td class='infoProduct' id='{{this._id}}'></td>
          <td><button onclick="removeProductFromCart('{{userCartId}}', '{{this.product._id}}')" class="btn btn-info">Eliminar</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <button class='button is-info mt-3' onclick='clearCart()'>Vaciar carrito</button>
  <a href='/carts/{{userCartId}}/purchase' class='button is-info mt-3'>
    <span class='icon'>
      
    </span><span>Finalizar compra</span></a>
  <button class='button is-info mt-3' onclick="location.href='/products'"><span class='icon'>
      <i class='material-icons'>arrow_back</i></span><span>Seguir comprando</span>
  </button>

{{else}}
  <p>No hay productos en el carrito</p>
  <button class='button is-info mt-3' onclick="location.href='/products'"><span class='icon'>
      <i class='material-icons'>arrow_back</i></span><span>Seguir comprando</span>
  </button>
{{/if}}
<a class='infoCart' id='{{userCartId}}'></a>
<script src='/socket.io/socket.io.js'></script>
<script src='/js/cart.js'></script>
<script src='/js/profile.js'></script>